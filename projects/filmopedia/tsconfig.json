{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest", "node"],
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./node_modules"]
}